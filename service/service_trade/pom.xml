            <artifactId>commons-io</artifactId>
            <version>2.6</version>
        </dependency>

<!--        springboot整合rabbitmq-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-amqp</artifactId>
        </dependency>

        <!--微信支付-->
