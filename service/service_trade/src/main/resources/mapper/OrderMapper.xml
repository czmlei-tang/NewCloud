<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tang.newcloud.service.trade.mapper.OrderMapper">

    <resultMap id="BaseResultMap" type="com.tang.newcloud.service.trade.entity.Order">
            <id property="id" column="id" jdbcType="CHAR"/>
            <result property="orderNo" column="order_no" jdbcType="VARCHAR"/>
            <result property="courseId" column="course_id" jdbcType="VARCHAR"/>
            <result property="courseTitle" column="course_title" jdbcType="VARCHAR"/>
            <result property="courseCover" column="course_cover" jdbcType="VARCHAR"/>
            <result property="teacherName" column="teacher_name" jdbcType="VARCHAR"/>
            <result property="memberId" column="member_id" jdbcType="VARCHAR"/>
            <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
            <result property="mobile" column="mobile" jdbcType="VARCHAR"/>
            <result property="totalFee" column="total_fee" jdbcType="DECIMAL"/>
            <result property="payType" column="pay_type" jdbcType="TINYINT"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
            <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
            <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,order_no,course_id,
        course_title,course_cover,teacher_name,
        member_id,nickname,mobile,
        total_fee,pay_type,status,
        is_deleted,gmt_create,gmt_modified
    </sql>
    <delete id="deleteByOrderIdAndMemberId">
        delete from trade_order where id=#{orderId} and member_id=#{memberId}
    </delete>
    <select id="selectOrderByCourseIdAndMenberId" resultType="java.lang.String">
        select id from trade_order where course_id=#{courseId} and member_id=#{memberId}
    </select>
    <select id="selectByOrderIdAndMemberId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"></include> from trade_order where id=#{orderId} and member_id=#{memberId}
    </select>
    <select id="selectStatus" resultType="Integer">
        select status from trade_order where course_id=#{courseId} and member_id=#{memberId}
    </select>
    <select id="selectOrderListByMemberId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"></include> from  trade_order where member_id=#{memberId} order by gmt_create desc
    </select>
</mapper>
